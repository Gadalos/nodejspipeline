def gitcommit

pipeline {
    agent none
    stages {
        stage('VerificaciÃ³n SCM') {
            agent {
                label 'agent1'
            }
            steps {
                checkout scm
                sh "git rev-parse --short HEAD > .git/commit-id"
                script {
                  gitcommit = readFile('.git/commit-id').trim()
                }
            }
        }
        
        stage('test') {
            agent {
                label 'agentdocker'
            }
            steps {
              script {
                def contenedortest = docker.image('node:12.12.0-alpine')
                contenedortest.pull()
                contenedortest.inside {
                  sh 'npm install --only=dev'
                  sh 'npm test'
                }
              }
            }
        }
        
        stage('Docker Build & Push') {
            agent {
                label 'agentdocker'
            }
            steps {
              script{
                docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credential') {
                    def nuestraapp = docker.build("edisaac/nodejsapp:${gitcommit}", ".")
                    nuestraapp.push()
                }
              }
            }
        }
    }
}
